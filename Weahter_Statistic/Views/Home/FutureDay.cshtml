                            <i class="fa fa-spinner fa-spin"></i> Loading data from external source
                        </div>
                    </div>

                    <table class="table table-bordered table-dark">
                        <tr class="d-flex">
                            for (int i = 0; i < ViewBag.days; i++)
                            {
                                int temp = i + 1;
                                <th class="col-1 bg-secondary">Dzień temp</th>
                            }
