<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Karol Ścigała" />
    <meta name="copyright" content="Karol Ścigała" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="historia pogody,informacje o pogodzie,porównania pogody" />
    <meta name="description" content="Informacje na temat pogody, które już zaszły, a także prognoza na jutro" />
    <title>@ViewData["Title"] - Weather_Statistic</title>

    <environment include="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/mainPage.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    </environment>

</head>
<body>
    <div class="myContainer">
        <div class="myRow">
            <div class="innerRow1">
                <div class="boxLogo">
                    <div class="logo">
                        <!--https://www.freepik.com/free-vector/lovely-monsoon-season-composition-with-flat-design_2631127.htm-->
                    </div>
                </div>
                <div class="boxHeader">
                    <header>Statystyki pogodowe</header>
                    <!--Icon weather from Font Awesome-->
                    <div class="iconweat">
                    <i class="fas fa-sun fa-2x"></i>
                    <i class="fas fa-cloud-sun fa-2x"></i>
                    <i class="fas fa-cloud fa-2x"></i> 
                    <i class="fas fa-cloud-sun-rain fa-2x"></i>
                    <i class="fas fa-cloud-rain fa-2x"></i>
                    <i class="fas fa-cloud-meatball fa-2x"></i>
                    <i class="fas fa-snowflake fa-2x"></i></div>

                    <!--Menu show after click below button-->
                    <button class="btn btn-outline-dark btn-lg mybutton">Więcej</button>
                </div>
            </div>
            <div class="innerRow2">
                <div class="goldthink">
                    <p class="think" id="goldthink1"></p>
                    <p class="author" id="author1"></p>
                </div>
                <div class="goldthink">
                    <p class="think" id="goldthink2"></p>
                    <p class="author"id="author2"></p>
                </div>
                <div class="goldthink">
                    <p class="think" id="goldthink3"></p>
                    <p class="author"id="author3"></p>
                </div>
            </div>
        </div>
        <footer>
            &copy; 2019, Aplikacja internetowa stworzona przez Karola Ścigała
        </footer>
    </div>


    <!-- Menu visible and hidden right-->
    <div class="menu">
        <p>Menu</p>
    </div>
    <div class="bgmenu"></div>

    <nav>
        <p class="titlemenu">Menu:</p>
        <ul>
            <li>
                <div class="detailmenu">
                    <p> Dane dla jednego miasta</p>
                    <ul class="undermenu">
                        <li><a asp-controller="Home" asp-action="Searcher" asp-route-days="1">Wczoraj</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCity" asp-route-days="3">3 dni</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCity" asp-route-days="7">7 dni</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCity" asp-route-days="14">14 dni</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCity" asp-route-days="31">31 dni</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <div class="detailmenu">
                    <p>Porównywarka miast</p>
                    <ul class="undermenu">
                        <li><a asp-controller="Home" asp-action="SearcherTwo" asp-route-days="1">Wczoraj</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCompares" asp-route-days="3">3 dni</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCompares" asp-route-days="7">7 dni</a></li>
                        <li><a asp-controller="Home" asp-action="ManyDaysCompares" asp-route-days="14">14 dni</a></li>
                    </ul>
                </div>
            </li>
            <li class="future">
                <p><a asp-controller="Home" asp-action="FutureDay">Prognoza na jutro</a></p>
            </li>
        </ul>
    </nav>

    <!-- Nothing rendering-->
    @RenderBody()
    <script type="text/javascript" src="~/js/mainpageJS.js"></script>
</body>
</html>
